{
    "name": "xfactura-api",
    "version": "0.0.1",
    "description": "xfactura API",
    "private": true,
    "license": "MPL-2.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "clean": "rimraf ./build",
        "build": "pnpm clean && node ./scripts/build.js",
        "dev": "pnpm build && concurrently \"nodemon --env-file=.env ./build/index.js\" \"node ./scripts/watch.js\"",
        "start": "node ./build/index.js",
        "db.push": "drizzle-kit push:sqlite"
    },
    "dependencies": {
        "@libsql/client": "0.4.0-pre.7",
        "drizzle-orm": "^0.29.3",
        "esbuild": "^0.19.11",
        "express": "^4.18.2",
        "googleapis": "^131.0.0",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "concurrently": "^8.2.2",
        "dotenv": "^16.3.2",
        "drizzle-kit": "^0.20.13",
        "nodemon": "^3.0.3",
        "rimraf": "^5.0.5"
    }
}
